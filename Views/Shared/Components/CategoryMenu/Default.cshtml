@model IEnumerable<Category>

<div class="list-group ">
    <a href="/" class="list-group-item list-group-item-action ">Tüm Kategoriler</a>

    @foreach (var c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-id="@c.Id" 
        class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==c.Id.ToString()?"active":"")">
        @c.Name
        </a>
       
    }

</div>
