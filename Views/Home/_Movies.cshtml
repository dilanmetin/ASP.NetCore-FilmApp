@model IEnumerable<Movie>

<div class="container">
    <div class="row justify-content-center">
           
            @foreach (var movie in Model)
            {
                <div class="card mx-4 mb-4 col-md-4" style="width: 18rem">
                    <img src="~/img/@movie.ImageUrl"
                         class="card-img-top"
                         alt="@movie.Description"
                         style="height: 24rem" />
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@movie.Id">@movie.Name</a>
                        </h5>
                        <p class="card-text">
                            @movie.Description
                        </p>
                    </div>
                    <a asp-action="Details" asp-controller="Home" asp-route-id="@movie.Id" class="btn btn-primary mb-1">Detail</a>
                    <a href="#" class="btn btn-primary mb-3">Watch Movie</a>
                    <p class="card-text mb-1">
                        <small class="text-body-secondary">Last updated 5 min ago</small>
                    </p>
                </div>
            }
   
       
    </div>
</div>
